<%= simple_form_for(@service) do |f| %>
	<div class="form_wrapper">
	  <%= f.error_notification %>

	  <div class="form-inputs">
	    <%= f.input :name %>
	    <%= f.input :description %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, :class => "btn btn-primary" %>
	  </div>
	</div>
<% end %>
