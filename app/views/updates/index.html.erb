<h1><%= @agency_from_url.name %> Updates</h1>

<%= link_to 'New Update', new_agency_update_path(@agency_from_url), :class => "btn btn-primary" %>

<hr>

<table class="table">
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @updates.each do |update| %>
      <tr>
        <td><%= update.content %></td>
        <td><%= link_to 'Show', agency_update_path(update.agency, update) %></td>
        <td><%= link_to 'Edit', edit_agency_update_path(update.agency, update) %></td>
        <td><%= link_to 'Destroy', agency_update_path(update.agency, update), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

